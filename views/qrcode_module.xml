       <field name="model">qrcode_module.qrcode_module</field>
        <field name="arch" type="xml">
             <form>
                <header>
                    <button string="Générer QR Code"
                            type="object"
                            name="generer_qrcode"/>
                </header>
                <sheet>
                    <group>
